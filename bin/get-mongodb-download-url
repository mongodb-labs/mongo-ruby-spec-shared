#!/usr/bin/env ruby

desired_version, arch = ARGV
if arch.nil?
  STDERR.puts "Usage: get-mongodb-download-url desired-version arch"
  exit 1
end

$: << File.join(File.dirname(__FILE__), '../lib')
require 'mrss/server_version_registry'

begin
  puts Mrss::ServerVersionRegistry.new(desired_version, arch).download_url
rescue Mrss::ServerVersionRegistry::Error => exc
  # 4.7.0 has no advertised downloads but it is downloadable and we do need it
  if Mrss::ServerVersionRegistry::MissingDownloadUrl === exc &&
    %w(4.7 4.7.0).include?(desired_version)
  then
    # Dirty hack
    registry = Mrss::ServerVersionRegistry.new('4.4.3', arch)
    url = registry.download_url.sub('4.4.3', '4.7.0')

    # Sanity check - ensure the URL we hacked up is a valid one
    io = registry.uri_open(url)
    io.read(1)
    io.close

    puts url
  else
    STDERR.puts "Error: #{exc}"
    exit 2
  end
end
